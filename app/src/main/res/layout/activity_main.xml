<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hardText2" />

    <EditText
        android:id="@+id/normal_editText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/len_20"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"/>

    <com.hard.flod.HardEditText
        android:id="@+id/hardText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/selector_btn"
        android:hint="请输入密码"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="@dimen/len_20"
        android:text=""
        android:maxLines="1"
        android:singleLine="true"
        app:background="@drawable/selector_btn"
        app:btnPadding="10dp"
        app:btnSize="20dp"
        app:labelPaddingTop="4dp"
        app:labelTextSize="12sp"
        app:labelTranslationX="0dp"
        app:enablePwVisibleBtn="true"
        app:enableHideWithClearBtn="false"
        app:layout_constraintTop_toBottomOf="@+id/normal_editText" />

    <com.hard.flod.HardEditText
        android:id="@+id/hardText2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@null"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="@dimen/len_20"
        app:background="@drawable/selector_btn"
        app:btnPadding="10dp"
        app:btnSize="20dp"
        app:labelText="12121112"
        app:labelPaddingTop="4dp"
        app:labelTextSize="12sp"
        app:labelTranslationX="0dp"
        app:enablePwVisibleBtn="true"
        app:layout_constraintTop_toBottomOf="@+id/hardText" />

</android.support.constraint.ConstraintLayout>